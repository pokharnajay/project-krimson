# ============================================================================
# YouTube Transcript RAG API - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Flask Configuration
# ----------------------------------------------------------------------------
# IMPORTANT: Use strong random strings in production (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-min-32-chars
FLASK_DEBUG=False
FLASK_TESTING=False

# ----------------------------------------------------------------------------
# JWT Configuration
# ----------------------------------------------------------------------------
# IMPORTANT: Use a different secret from SECRET_KEY
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars

# Token expiration times (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600          # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000      # 30 days

# ----------------------------------------------------------------------------
# Database Configuration (Supabase)
# ----------------------------------------------------------------------------
# Get these from your Supabase project: https://supabase.com
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# ----------------------------------------------------------------------------
# Admin Configuration
# ----------------------------------------------------------------------------
# API key for admin operations (create users, etc.)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=your-admin-api-key-here

# ----------------------------------------------------------------------------
# AI/LLM Configuration (OpenRouter)
# ----------------------------------------------------------------------------
# Get API key from: https://openrouter.ai
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=openai/gpt-4-turbo

# Alternative models you can use:
# - openai/gpt-3.5-turbo (cheaper, faster)
# - anthropic/claude-3-opus (high quality)
# - anthropic/claude-3-sonnet (balanced)
# - google/gemini-pro (free tier available)

# ----------------------------------------------------------------------------
# Vector Database Configuration (Pinecone)
# ----------------------------------------------------------------------------
# Get API key from: https://www.pinecone.io
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=youtube-transcripts

# NOTE: Your Pinecone index must be configured with:
# - Dimensions: 384
# - Metric: cosine
# - Cloud: AWS
# - Region: us-east-1 (or match PINECONE_ENVIRONMENT)

# ----------------------------------------------------------------------------
# Processing Configuration
# ----------------------------------------------------------------------------
# Number of concurrent threads for batch video processing
MAX_THREADS=5

# Vector search configuration
VECTOR_SEARCH_TYPE=similarity
TOP_K_RESULTS=5

# ----------------------------------------------------------------------------
# Rate Limiting Configuration
# ----------------------------------------------------------------------------
# Enable/disable rate limiting
RATELIMIT_ENABLED=True

# Storage backend for rate limiting
# Options: memory:// (development) or redis://localhost:6379 (production)
RATELIMIT_STORAGE_URL=memory://

# Default rate limit (per user)
RATELIMIT_DEFAULT=100/hour

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Use * for development only, specify domains in production
CORS_ORIGINS=*

# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/logging.txt

# ----------------------------------------------------------------------------
# Optional: Skip Configuration Validation
# ----------------------------------------------------------------------------
# Set to 1 to skip configuration validation on startup (not recommended)
# SKIP_CONFIG_VALIDATION=0
