# ============================================================================
# YouTube Transcript RAG Frontend - Environment Configuration Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
# Backend API base URL (without /api suffix)
NEXT_PUBLIC_API_URL=http://localhost:5000

# ----------------------------------------------------------------------------
# Authentication Configuration
# ----------------------------------------------------------------------------
# JWT access token expiry time in seconds (default: 1 hour)
NEXT_PUBLIC_TOKEN_EXPIRY=3600

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# App name displayed in UI
NEXT_PUBLIC_APP_NAME="YouTube Transcript RAG"

# Enable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG=false

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable automatic token refresh
NEXT_PUBLIC_AUTO_REFRESH_ENABLED=true

# Enable chat message persistence
NEXT_PUBLIC_CHAT_PERSISTENCE=true

# Sources refresh interval in milliseconds (default: 10 seconds)
NEXT_PUBLIC_SOURCES_REFRESH_INTERVAL=10000

# Credits refresh interval in milliseconds (default: 30 seconds)
NEXT_PUBLIC_CREDITS_REFRESH_INTERVAL=30000
